#include <cmath>
#include <iostream>

#include "typesInterface.h"
#include "pVect.hpp"
#include "pVectManip.hpp"
#include "pMapItem.h"
#include "pVectComm.hpp"

using namespace Teuchos;


//! Run with two processors
int main(int argc, char *argv[])
{
  environment  env(argc,argv);
  RCP<communicator> world(new communicator);
  
  assert(world->size() == 2);
  
  typedef pVect<point3d,pMapItem> PVECT;
  PVECT    sVector, rVector;    
  pMapItem item;
  
  pVectComm<point3d,pMapItem> vectorComm(world);

  if(world->rank() == 0)
  {
    item.setPid(0); item.setLid(1); item.setGid(5); sVector.push_back(item,point3d( 1.0,-2.0, 0.0),false);
    item.setPid(0); item.setLid(2); item.setGid(6); sVector.push_back(item,point3d(-1.0, 6.0, 4.0),false);
    
    sVector.resetFinder();
    vectorComm.vectorData(sVector);
  }
  
  if(world->rank() == 1)
  {
    item.setPid(1); item.setLid(1); item.setGid(1); sVector.push_back(item,point3d( 0.5, 1.0, 0.0),false);
    item.setPid(1); item.setLid(2); item.setGid(2); sVector.push_back(item,point3d( 0.0, 1.0, 0.0),false);
    item.setPid(1); item.setLid(3); item.setGid(3); sVector.push_back(item,point3d( 0.0, 0.0, 1.0),false);
    item.setPid(1); item.setLid(4); item.setGid(4); sVector.push_back(item,point3d(-1.0,-1.0,-1.0),false);
    
    sVector.resetFinder();
    vectorComm.vectorData(sVector);
  }
  
  world->barrier();
  
  if(world->rank() == 0)
  { cout << sVector << endl; }
  
  
  world->barrier();
  
  if(world->rank() == 1)
  { cout << sVector << endl; }
}

/* Pid 0
1
 map:  pid: 1 lid: 1 gid: 4
 data: -1 -1 -1

2
 map:  pid: 0 lid: 2 gid: 6
 data: -1 6 4
*/

/* Pid 1
1
 map:  pid: 1 lid: 1 gid: 4
 data: -1 -1 -1

2
 map:  pid: 0 lid: 2 gid: 6
 data: -1 6 4
*/
